# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Hello world page
GET     /helloworld                           controllers.HelloWorld.helloworld()

#Tasks
GET     /helloworld/students                  controllers.HelloWorld.students()
POST    /helloworld/newStudent                  controllers.HelloWorld.newStudent()
POST    /helloworld/students/:id/delete       controllers.HelloWorld.deleteStudent(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
